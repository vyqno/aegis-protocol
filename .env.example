# ============================================================
# AEGIS Protocol Environment Variables
# Copy to .env and fill in real values: cp .env.example .env
# NEVER commit .env - only .env.example
# ============================================================

# --- Wallet ---
# Use 1Password reference in production: op://vault/item/field
CRE_ETH_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE
CRE_TARGET=staging-settings
DEPLOYER_PRIVATE_KEY=0x_YOUR_DEPLOYER_KEY_HERE

# --- AI (Groq Cloud) ---
GROQ_API_KEY_VAR=gsk_YOUR_GROQ_KEY_HERE

# --- World ID ---
WORLD_ID_API_KEY_VAR=YOUR_WORLD_ID_KEY_HERE

# --- 1inch ---
ONEINCH_API_KEY_VAR=YOUR_1INCH_KEY_HERE

# --- RPC Endpoints ---
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
BASE_SEPOLIA_RPC_URL=https://base-sepolia-rpc.publicnode.com

# --- Frontend (NEXT_PUBLIC_ = exposed to browser, OK for these) ---
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=YOUR_THIRDWEB_CLIENT_ID
NEXT_PUBLIC_WORLD_ID_APP_ID=app_YOUR_WORLD_ID_APP

# --- Etherscan (for contract verification) ---
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_KEY_HERE

# --- Tenderly (optional) ---
TENDERLY_VIRTUAL_TESTNET_RPC=https://virtual.sepolia.rpc.tenderly.co/YOUR_ID
